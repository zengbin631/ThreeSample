<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
<welcome-file-list>
    <welcome-file>QueryStudentByPageServlet</welcome-file>
</welcome-file-list>

<servlet>
    <servlet-name>AddStudentServlet</servlet-name>
    <servlet-class>org.student.servlet.AddStudentServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>AddStudentServlet</servlet-name>
    <url-pattern>/AddStudentServlet</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>DeleteStudentServlet</servlet-name>
    <servlet-class>org.student.servlet.DeleteStudentServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>DeleteStudentServlet</servlet-name>
    <url-pattern>/DeleteStudentServlet</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>UpdateStudentServlet</servlet-name>
    <servlet-class>org.student.servlet.UpdateStudentServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>UpdateStudentServlet</servlet-name>
    <url-pattern>/UpdateStudentServlet</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>QueryStudentBySnoServlet</servlet-name>
    <servlet-class>org.student.servlet.QueryStudentBySnoServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>QueryStudentBySnoServlet</servlet-name>
    <url-pattern>/QueryStudentBySnoServlet</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>QueryStudentAllServlet</servlet-name>
    <servlet-class>org.student.servlet.QueryStudentAllServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>QueryStudentAllServlet</servlet-name>
    <url-pattern>/QueryStudentAllServlet</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>QueryStudentByPageServlet</servlet-name>
    <servlet-class>org.student.servlet.QueryStudentByPageServlet</servlet-class>
</servlet>
<servlet-mapping>
     <servlet-name>QueryStudentByPageServlet</servlet-name>
    <url-pattern>/QueryStudentByPageServlet</url-pattern>
</servlet-mapping>


</web-app>